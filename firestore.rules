rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- FUNGSI HELPER ---
    function isSignedIn() {
      return request.auth != null;
    }

    // --- ATURAN GAMES (DILONGGARKAN) ---
    match /games/{gameId} {
      // 1. Publik boleh membaca (untuk Landing Page & Tabel)
      allow read: if true;

      // 2. Admin boleh Tulis/Edit/Hapus
      // PERUBAHAN: Kita ganti validasi ketat (field-by-field) menjadi cek login saja.
      // Ini mengizinkan field baru (location, email, image) dan tipe data baru (size number) masuk tanpa error permission.
      allow write: if isSignedIn();
    }

    // --- ATURAN REQUEST (PUBLIK) ---
    match /requests/{reqId} {
      // Izinkan publik membuat request (Anonymous write)
      allow create: if true;
      
      // Admin boleh baca/edit/hapus
      allow read, update, delete: if isSignedIn();
    }

    // --- ATURAN FITUR LAIN (TETAP SAMA) ---
    match /projects/{projectId} {
      allow read, write: if isSignedIn();
    }
    
    match /tasks/{taskId} {
      allow read, write: if isSignedIn();
    }

    match /genres/{genreId} {
      allow read, write: if isSignedIn();
    }
    
    match /emailLocations/{locId} {
      allow read, write: if isSignedIn();
    }
    
    match /adminShifts/{shiftId} {
        allow read, write: if isSignedIn();
    }
    
    match /dailyRevenues/{revId} {
        allow read, write: if isSignedIn();
    }

    match /users/{userId}/{document=**} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }

    // Default deny untuk koleksi tidak dikenal
    match /{document=**} {
      allow read, write: if false;
    }
  }
}