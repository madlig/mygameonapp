rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- FUNGSI VALIDASI ---
    function isSignedIn() {
      return request.auth != null;
    }

    // --- ATURAN UNTUK KOLEKSI 'games' ---
    match /games/{gameId} {
      // Siapa pun boleh membaca data game (untuk landing page).
      allow read: if true;

      // Izin untuk MEMBUAT (create) dan MENGEDIT (update) dokumen.
      // Kita PERTAHANKAN validasi data ketat Anda di sini.
      allow create, update: if isSignedIn() &&
                              request.resource.data.name is string &&
                              request.resource.data.size is string &&
                              request.resource.data.status is string &&
                              request.resource.data.genre is list &&
                              request.resource.data.dateAdded is timestamp;

      // Izin HANYA untuk MENGHAPUS (delete) dokumen.
      allow delete: if isSignedIn();
    }

    // --- ATURAN UNTUK REQUEST GAME (FIX UTAMA) ---
    match /requests/{reqId} {
      // MODIFIKASI: Izinkan publik (termasuk anonymous) membuat request
      // Kita bisa tambahkan validasi basic agar data tidak sampah
      allow create: if true && 
                      request.resource.data.title is string &&
                      request.resource.data.platform is string;
      
      // Admin tetap memegang kendali penuh untuk baca, edit, hapus
      allow read, update, delete: if isSignedIn();
    }

    // --- ATURAN UNTUK FITUR TASKS & PROJECTS (DITAMBAHKAN) ---
    // Diperlukan karena Anda memiliki fitur 'src/features/tasks'
    match /projects/{projectId} {
      allow read, write: if isSignedIn();
    }
    
    match /tasks/{taskId} {
      allow read, write: if isSignedIn();
    }

    // --- ATURAN UNTUK KOLEKSI LAIN (DIPERTAHANKAN) ---
    match /genres/{genreId} {
      allow read, write: if isSignedIn();
    }
    
    match /emailLocations/{locId} {
      allow read, write: if isSignedIn();
    }
    
    match /adminShifts/{shiftId} {
        allow read, write: if isSignedIn();
    }
    
    match /dailyRevenues/{revId} {
        allow read, write: if isSignedIn();
    }

    match /users/{userId}/{document=**} {
        allow read, write: if isSignedIn() && request.auth.uid == userId;
    }

    // Default: tolak akses ke dokumen yang tidak didefinisikan
    match /{document=**} {
      allow read, write: if false;
    }
  }
}